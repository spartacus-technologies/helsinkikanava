<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ui.helsinkikanava"
    android:versionCode="3"
    android:versionName="1.2" >

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="10" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.ui.helsinkikanava.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
   			android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ui.helsinkikanava.FragmentDefault"
            android:label="@string/title_activity_fragment_default" >
        </activity>
        <activity
            android:name="com.ui.helsinkikanava.FragmentMeetings"
            android:label="@string/title_activity_fragment_meetings" >
        </activity>
        <activity
            android:name="com.ui.helsinkikanava.PopupCheckUpdates"
            android:label="@string/title_activity_popup_check_updates" >
        </activity>
        <activity
            android:name="com.ui.helsinkikanava.ActivityPopupSettings"
            android:label="@string/title_activity_activity_popup_settings" >
        </activity>
        <activity android:name="com.ui.helsinkikanava.ActivityVideo"
            	  android:screenOrientation="portrait"
   				  android:configChanges="orientation|keyboardHidden"/>
        <activity
            android:name="com.ui.helsinkikanava.FragmentVideo"
            android:label="@string/title_activity_fragment_video" >
        </activity>
        <activity
            android:name="com.ui.helsinkikanava.FragmentParticipants"
            android:label="@string/title_activity_fragment_participants" >
        </activity>
        <activity
            android:name="com.ui.helsinkikanava.FragmentResolutions"
            android:label="@string/title_activity_fragment_resolutions" >
        </activity>
        <activity
            android:name="com.ui.helsinkikanava.PopupVotingResults"
            android:label="@string/title_activity_popup_voting_results" >
        </activity>
    </application>

</manifest>
